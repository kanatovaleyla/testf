-- Cars Table
CREATE TABLE Cars (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    engine_type VARCHAR(50),
    price DECIMAL(10, 2),
    production_year INT
);

-- Employees Table
CREATE TABLE Employees (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    position VARCHAR(100),
    salary DECIMAL(10, 2)
);

-- CarProducingMachines Table
CREATE TABLE CarProducingMachines (
    id INT AUTO_INCREMENT PRIMARY KEY,
    machine_name VARCHAR(255) NOT NULL,
    capacity INT,
    operational BOOLEAN
);
